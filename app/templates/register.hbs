<div class="row">&nbsp;</div>
<div class="row ">
  <div class="col-sm-2 col-md-2"></div>

  <div class="col-sm-8 col-md-8">

    <form class="form-horizontal" {{action 'signup' on='submit'}}>

      <div class="form-group">
        <label class="control-label col-sm-2" for="email">Email:</label>
        <div class="col-sm-10">
          {{input type="email" class="form-control" value=email id="email" placeholder="username@domain.com"}}
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Password:</label>
        <div class="col-sm-10"> 
          {{input type="password" class="form-control" value=password id="pwd" placeholder="Minimum 6 digits"}}
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">Role:</label>
        <div class="col-sm-4">
          {{#power-select value=defaultValue selected=defaultValue options=roles onchange=(action "selectRole") as |role|}}
            {{role}}
          {{/power-select}}
        </div>
      </div>
      <div class="form-group"> 
        <div class="col-sm-4 col-md-4 col-sm-offset-8 col-md-offset-8">
          <input type="submit" class="btn btn-lg btn-primary btn-block" value="Signup">
        </div>
      </div>

    </form>
  </div>

  <div class="col-sm-2 col-md-2"></div>
</div>