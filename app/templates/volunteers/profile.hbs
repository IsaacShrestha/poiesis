<div class="row">
    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
	<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
		{{volunteers-menu}}
	</div>
	<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 well">
            <h3 class="display-3">Update profile!</h3>
            <br/><br/>
            <form class="form-horizontal" {{action 'updateprofile' on='submit'}}>
                <h4 class="display-4">Personal Information</h4>
                
                <div class="form-group">
                    <label class="control-label col-sm-2" for="name">Name:</label>
                    <div class="col-sm-10">
                    {{input type="text" class="form-control" required=isRequired value=name id="name" placeholder=model.name}}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd">Address:</label>
                    <div class="col-sm-10">
                    {{input type="text" class="form-control" required=isRequired value=address id="address" placeholder=model.address}}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Phone:</label>
                    <div class="col-sm-10">
                    {{input type="text" class="form-control" required=isRequired value=phone id="phone" placeholder=model.phone}}
                    </div>
                </div>
                
            <h4 class="display-4">Vehicle Information</h4>
            <div class="form-group">
                <label class="control-label col-sm-2" for="manufacturer">Manufacturer:</label>
                <div class="col-sm-10"> 
                {{input type="text" class="form-control" value=manufacturer id="manufacturer" placeholder=model.manufacturer}}
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="manufacturer">Model:</label>
                <div class="col-sm-10"> 
                {{input type="text" class="form-control" value=modelNo id="model" placeholder=model.modelNo}}
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="car"> Car color</label>
                <div class="col-sm-10"> 
                {{input type="text" class="form-control" value=color id="carColor" placeholder=model.carColor}}
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="year">Build year:</label>
                <div class="col-sm-10"> 
                {{input type="text" class="form-control" value=buildyear id="buildyear" placeholder=model.buildyear}}
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="registration">Registration number:</label>
                <div class="col-sm-10"> 
                {{input type="text" class="form-control" value=registeration id="regNumber" placeholder=model.registerationNo}}
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="manufacturer">License number:</label>
                <div class="col-sm-10"> 
                {{input type="text" class="form-control" value=license id="licenseNumber" placeholder=model.licenseNo}}
                </div>
            </div>
            
            <div class="form-group"> 
                <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Update Profile">
                </div>
            </div>
            </form>  
	</div>
</div>
{{yield}}